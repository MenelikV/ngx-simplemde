{
  "name": "ngx-simplemde",
  "version": "1.1.1",
  "main": "./bundles/simplemde.umd.js",
  "module": "./esm5/simplemde.js",
  "es2015": "./esm2015/simplemde.js",
  "typings": "./simplemde.d.ts",
  "license": "MIT",
  "description": "Angular for simplemde",
  "author": "cipchk",
  "homepage": "https://cipchk.github.io/ngx-simplemde/",
  "bugs": {
    "url": "https://github.com/cipchk/ngx-simplemde/issues"
  },
  "keywords": [
    "embeddable",
    "markdown",
    "editor",
    "javascript",
    "wysiwyg",
    "ngx-simplemde",
    "simplemde",
    "angular",
    "components",
    "typescript"
  ],
  "scripts": {
    "analyze": "ng build --prod --build-optimizer --stats-json",
    "lint": "tslint -p tsconfig.json -c tslint.json 'lib/*/*.ts'",
    "test": "ng test --code-coverage --watch=false",
    "site:build": "ng build --prod --build-optimizer",
    "site:gh": "ng build --prod --build-optimizer --base-href /ngx-simplemde/ && gh-pages -d ./dist",
    "build": "bash ./build.sh",
    "release:next": "bash ./build.sh && cd publish && npm publish --access public --tag next",
    "release": "bash ./build.sh && cd publish && npm publish --access public"
  },
  "dependencies": {
    "simplemde-antd": "^1.0.0"
  },
